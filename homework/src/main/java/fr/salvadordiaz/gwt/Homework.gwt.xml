<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="homework">
	<inherits name="com.google.gwt.inject.Inject" />
	<inherits name="com.google.common.collect.Collect" />
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.activity.Activity" />
	<inherits name="com.google.gwt.logging.Logging" />
	<inherits name="com.google.gwt.visualization.Visualization" />
	<inherits name="fr.salvadordiaz.gwt.MobilePermutation"/>

	<set-property name="gwt.logging.popupHandler" value="DISABLED" />
	<set-property name="user.agent" value="gecko1_8,safari" />

	<!-- deferred binding rules for ginjector providers, first the default rule, then the special replacement -->
	<replace-with class="fr.salvadordiaz.gwt.client.app.DesktopGinjectorProvider">
		<when-type-assignable class="fr.salvadordiaz.gwt.client.app.GinjectorProvider" />
	</replace-with>
	<replace-with class="fr.salvadordiaz.gwt.client.app.MobileGinjectorProvider">
		<when-type-assignable class="fr.salvadordiaz.gwt.client.app.GinjectorProvider" />
		<when-property-is name="mobile" value="true"/>
	</replace-with>

	<entry-point class="fr.salvadordiaz.gwt.client.App" />
</module>